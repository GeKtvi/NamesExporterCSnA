<UserControl x:Class="NamesExporterCSnA.View.LowerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NamesExporterCSnA.View"
             xmlns:sys ="clr-namespace:System;assembly=mscorlib"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="200">
    <UserControl.Resources>
        <sys:Double x:Key="buttonSize">30</sys:Double>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Width="{StaticResource buttonSize}" Height="{StaticResource buttonSize}" Padding="0" Grid.Column="0">
            <ui:SymbolIcon Symbol="Download"/>
        </Button>      
        
        <Button Width="{StaticResource buttonSize}" Height="{StaticResource buttonSize}" Padding="0" Grid.Column="2">
            <ui:SymbolIcon Symbol="Upload"/>
        </Button>


    </Grid>
</UserControl>
